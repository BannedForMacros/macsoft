  <!-- ‚Äì‚Äì‚Äì‚Äì‚Äì‚Äì SCRIPTS ‚Äì‚Äì‚Äì‚Äì‚Äì‚Äì -->
  <script type="module">
    /* barra de progreso (si decides a√±adirla en el layout) */
    const bar = document.getElementById('scroll-bar');
    if (bar){
      window.addEventListener('scroll',()=>{
        const {scrollTop,scrollHeight,clientHeight}=document.documentElement;
        bar.style.width=`${(scrollTop/(scrollHeight-clientHeight))*100}%`;
      });
    }

    /* Fade-in */
    const io=new IntersectionObserver((es)=>es.forEach(e=>{
      if(e.isIntersecting){e.target.classList.add('in');io.unobserve(e.target);}
    }),{threshold:.15});
    document.querySelectorAll('.animate-on-scroll').forEach(el=>io.observe(el));

    /* Tilt */
    document.querySelectorAll('.tiltable').forEach(card=>{
      const inner=card.firstElementChild; if(!inner) return;
      const reset=()=>inner.style.transform='rotateX(0deg) rotateY(0deg)';
      card.addEventListener('mousemove',ev=>{
        const r=card.getBoundingClientRect();
        const x=(ev.clientX-r.left)/r.width-.5;
        const y=(ev.clientY-r.top)/r.height-.5;
        inner.style.transform=`rotateX(${y*-12}deg) rotateY(${x*12}deg)`;
      });
      ['mouseleave','touchend','mousedown'].forEach(evt=>card.addEventListener(evt,reset));
    });
  </script>
