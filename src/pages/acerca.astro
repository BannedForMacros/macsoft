  document.addEventListener('DOMContentLoaded', () => {
    // IntersectionObserver para animaciones con diferentes delays
    const createObserver = (delay = 0) => {
      return new IntersectionObserver((entries, obs) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.classList.add('in');
              obs.unobserve(entry.target);
            }, delay * index);
          }
        });
      }, { 
        threshold: 0.1, 
        rootMargin: '0px 0px -50px 0px' 
      });
    };

    // Observadores para diferentes tipos de animaciones
    const scrollObserver = createObserver(100);
    const leftObserver = createObserver(150);
    const rightObserver = createObserver(200);
    const scaleObserver = createObserver(100);
    const rotateObserver = createObserver(150);

    // Aplicar observadores
    document.querySelectorAll('.animate-on-scroll').forEach(el => scrollObserver.observe(el));
    document.querySelectorAll('.animate-from-left').forEach(el => leftObserver.observe(el));
    document.querySelectorAll('.animate-from-right').forEach(el => rightObserver.observe(el));
    document.querySelectorAll('.animate-scale').forEach(el => scaleObserver.observe(el));
    document.querySelectorAll('.animate-rotate').forEach(el => rotateObserver.observe(el));

